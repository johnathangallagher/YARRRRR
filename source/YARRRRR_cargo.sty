%-------------------------------------------------------------------------------
%                Required packages
%-------------------------------------------------------------------------------
% To load font files
\RequirePackage[quiet]{fontspec}


%-------------------------------------------------------------------------------
%                Fonts
%-------------------------------------------------------------------------------
% Loads font files to be used in style sheet
\newfontfamily\interlight{Inter}[
    Path = ./fonts/inter/,
    Extension = .otf,
    UprightFont = *-Light,
    ItalicFont = *-LightItalic,
    BoldFont = *-SemiBold,
    BoldItalic = *-SemiBoldItalic,
]

\newfontfamily\inter{Inter}[
    Path = ./fonts/inter/,
    Extension = .otf,
    UprightFont = *-Regular,
    SmallCapsFont = *-Regular,
    ItalicFont = *-Italic,
    BoldFont = *-Bold,
    BoldItalic = *-BoldItalic,
]

\newfontfamily\interheavy{Inter}[
    Path = ./fonts/inter/,
    Extension = .otf,
    UprightFont = *-Medium,
    ItalicFont = *-MediumItalic,
    BoldFont = *-ExtraBold,
    BoldItalic = *-ExtraBoldItalic,
]

\newfontfamily\interextraheavy{Inter}[
    Path = ./fonts/inter/,
    Extension = .otf,
    UprightFont = *-SemiBold,
    ItalicFont = *-SemiBoldItalic,
    BoldFont = *-Black,
    BoldItalic = *-BlackItalic,
]

\newcommand*{\headerfont}{\interheavy}
\newcommand*{\headerfontlight}{\inter}
\newcommand*{\footerfont}{\interheavy}
\newcommand*{\bodyfont}{\inter}
\newcommand*{\bodyfontlight}{\interlight}